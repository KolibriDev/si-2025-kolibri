{
  "openapi": "3.0.3",
  "info": {
    "title": "Tax Authority API",
    "version": "1.0.0",
    "description": "API for interacting with national registry, taxpayer, and tax return records."
  },
  "paths": {
    "/api/taxpayer": {
      "get": {
        "summary": "Get tax payer",
        "parameters": [
          {
            "name": "nationalId",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Taxpayer" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update tax payer",
        "parameters": [
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateTaxpayer" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Taxpayer" }
              }
            }
          }
        }
      }
    },
    "/api/tax-return/{id}": {
      "get": {
        "summary": "Get submitted tax return",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TaxReturn" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update submitted tax return",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAndUpdateTaxReturn"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated tax return",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TaxReturn" }
              }
            }
          }
        }
      }
    },
    "/api/tax-return": {
      "post": {
        "summary": "Submit a new tax return",
        "parameters": [
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAndUpdateTaxReturn"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created tax return",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TaxReturn" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Address": {
        "type": "object",
        "properties": {
          "street": { "type": "string" },
          "apartment_number": { "type": "integer" },
          "postal_code": { "type": "integer" },
          "town": { "type": "string" },
          "country": { "type": "string" },
          "municipality": { "type": "string" }
        }
      },
      "Residence": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "municipality": { "type": "integer" },
          "country": { "type": "string" }
        }
      },
      "NationalRegistryEntry": {
        "type": "object",
        "properties": {
          "national_id": { "type": "string", "minLength": 10, "maxLength": 10 },
          "name": { "type": "string" },
          "phone_number": { "type": "string" },
          "permanent_address": { "$ref": "#/components/schemas/Address" },
          "legal_residence": { "$ref": "#/components/schemas/Residence" },
          "family_national_id": { "type": "string" },
          "partner_national_id": { "type": "string" },
          "gender": { "type": "string" },
          "age": { "type": "integer" },
          "type": { "type": "string" }
        },
        "required": ["national_id", "name"]
      },
      "Taxpayer": {
        "type": "object",
        "properties": {
          "national_id": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["national_id", "email"]
      },
      "UpdateTaxpayer": {
        "type": "object",
        "properties": {
          "national_id": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["national_id", "email"]
      },
      "Salary": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "tax_return_id": { "type": "string" },
          "employer_national_id": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10
          },
          "employer_name": { "type": "string" },
          "amount": { "type": "number" }
        }
      },
      "TaxReturn": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "national_id": { "type": "string", "minLength": 10, "maxLength": 10 },
          "name": { "type": "string" },
          "address": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phone_number": { "type": "string" },
          "has_accident_insurance": { "type": "boolean" },
          "bank_account": { "type": "string", "minLength": 12, "maxLength": 12 }
        },
        "required": [
          "id",
          "national_id",
          "name",
          "address",
          "email",
          "phone_number",
          "has_accident_insurance",
          "bank_account"
        ]
      },
      "CreateAndUpdateTaxReturn": {
        "type": "object",
        "properties": {
          "national_id": { "type": "string", "minLength": 10, "maxLength": 10 },
          "name": { "type": "string" },
          "address": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phone_number": { "type": "string" },
          "has_accident_insurance": { "type": "boolean" },
          "bank_account": {
            "type": "string",
            "minLength": 12,
            "maxLength": 12
          },
          "salaries": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Salary" }
          }
        },
        "required": [
          "national_id",
          "name",
          "address",
          "email",
          "phone_number",
          "has_accident_insurance",
          "bank_account",
          "salaries"
        ]
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Invalid request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "reason": { "type": "string" }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Missing or invalid API secret",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "reason": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}

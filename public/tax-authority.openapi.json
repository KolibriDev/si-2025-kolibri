{
  "openapi": "3.0.3",
  "info": {
    "title": "Skatturinn API",
    "version": "1.0.0",
    "description": "API for interacting with tax payers and tax return records."
  },
  "paths": {
    "/api/taxpayer": {
      "get": {
        "summary": "Get tax payer",
        "parameters": [
          {
            "name": "nationalId",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Taxpayer" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      },
      "put": {
        "summary": "Update tax payer",
        "parameters": [
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateTaxpayer" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Taxpayer" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/api/tax-return/{id}": {
      "get": {
        "summary": "Get submitted tax return",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TaxReturn" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      },
      "put": {
        "summary": "Update submitted tax return",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAndUpdateTaxReturn"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated tax return",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TaxReturn" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/api/tax-return": {
      "post": {
        "summary": "Submit a new tax return",
        "parameters": [
          {
            "name": "x-internal-secret",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAndUpdateTaxReturn"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created tax return",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TaxReturn" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Taxpayer": {
        "type": "object",
        "properties": {
          "nationalId": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "UpdateTaxpayer": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      },
      "TaxReturn": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "nationalId": { "type": "string" },
          "amount": { "type": "number" }
        }
      },
      "CreateAndUpdateTaxReturn": {
        "type": "object",
        "properties": {
          "nationalId": { "type": "string" },
          "amount": { "type": "number" }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Invalid request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "reason": { "type": "string" }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Missing or invalid API secret",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "reason": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
